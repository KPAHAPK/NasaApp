<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">
    <scale
        android:duration="@android:integer/config_mediumAnimTime"
        android:fromXScale="10%p"
        android:fromYScale="10%p"
        android:pivotX="50%p"
        android:pivotY="50%p"
        android:startOffset="@android:integer/config_mediumAnimTime"
        android:toXScale="100%p"
        android:toYScale="100%p" />
    <set android:duration="@android:integer/config_mediumAnimTime">
        <alpha
            android:fromAlpha=".5"
            android:toAlpha="1" />
        <translate
            android:fromYDelta="50%p"
            android:toYDelta="0" />
    </set>
</set>